<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.Feed.HeaderFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:layout_gravity="fill_horizontal"
        android:background="@drawable/background_header_shadow"
        >
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:src="@drawable/ic_configuration"
            android:background="@drawable/button_color_selector"
            android:layout_weight="1"
            />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:src="@drawable/ic_like"
            android:background="@drawable/button_color_selector"
            android:layout_weight="1"
            />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:src="@drawable/ic_profile"
            android:background="@drawable/button_color_selector"
            android:layout_weight="1"
            />

        <ImageButton
            android:id="@+id/matches"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:src="@drawable/ic_chats"
            android:background="@drawable/button_color_selector"
            />


    </LinearLayout>


</FrameLayout>